      <img src="plato 4.jpg" alt="Plato 4" onclick="abrirModal('Pollo Oriental', 'plato 4.jpg', ['Pechuga de pollo', 'Vegetales salteados', 'Salsa teriyaki', 'Arroz jazmÃ­n'], 42000)">
      <img src="plato 5.jpg" alt="Plato 5" onclick="abrirModal('Tacos BotÃ¡nicos', 'plato 5.jpg', ['Tortillas rojas', 'Crujiente empanizado', 'Pollo/pescado/tofu', 'Flores comestibles'], 28000)">
      <img src="plato 6.jpg" alt="Plato 6" onclick="abrirModal('Postre de MaracuyÃ¡', 'plato 6.jpg', ['MaracuyÃ¡ natural', 'Base de galleta', 'Crema batida'], 18000)">
    </section>

    <section class="formulario">
      <h2>Realiza tu Pedido</h2>
      <form onsubmit="enviarPedido(event)">
        <input type="text" id="nombre" placeholder="Nombre" required>
        <input type="tel" id="telefono" placeholder="NÃºmero de TelÃ©fono" required>
        <input type="text" id="direccion" placeholder="DirecciÃ³n" required>
        <input type="text" id="pago" placeholder="MÃ©todo de Pago" required>
