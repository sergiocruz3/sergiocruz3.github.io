      <img src="plato 1 .jpg" alt="Plato 1" onclick="abrirModal('Sushi ArmonÃ­a', 'plato 1 .jpg', ['Arroz para sushi', 'Vinagre de arroz', 'SalmÃ³n, atÃºn', 'Alga nori, aguacate'], 150000)">
      <img src="platp 2.jpg" alt="Plato 2" onclick="abrirModal('Ensalada Verde', 'platp 2.jpg', ['Lechuga, espinaca', 'Tomate cherry', 'Pepino, zanahoria', 'Aderezo natural'], 32000)">
